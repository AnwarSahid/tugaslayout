<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:title="Tugas"
            app:titleTextColor="@color/white" />


    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/layarkecil"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="#B7B4FF"
        android:gravity="center"
        android:text="@string/_10"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        tools:layout_editor_absoluteX="30dp"
        tools:ignore="MissingConstraints,SmallSp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/layarkecil2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="#B7B4FF"
        android:gravity="center"
        android:text="@string/_10"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        tools:layout_editor_absoluteX="145"
        tools:ignore="MissingConstraints,SmallSp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/layarkecil3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="#B7B4FF"
        android:gravity="center"
        android:text="@string/_10"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        tools:layout_editor_absoluteX="260dp"
        tools:ignore="MissingConstraints,SmallSp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/layarsedang"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#B7B4FF"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="33dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_editor_absoluteY="150dp"
            tools:ignore="MissingConstraints" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/layarbesar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#B7B4FF"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/content"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_editor_absoluteY="265dp"
        tools:ignore="MissingConstraints" />
    
    <com.google.android.material.button.MaterialButton
        android:layout_width="151dp"
        android:layout_height="70dp"
        app:layout_editor_absoluteY="525dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="525dp"
        app:cornerRadius="20dp"
        android:text="@string/button"
        tools:ignore="MissingConstraints" />







</androidx.constraintlayout.widget.ConstraintLayout>



